{
  "name": "nacre",
  "version": "0.1.0",
  "private": true,
  "description": "Biological memory for long-living AI agents. Graph-native, local-first, with Ebbinghaus decay and sleep/wake consolidation.",
  "keywords": [
    "ai-memory",
    "knowledge-graph",
    "agent-memory",
    "memory-layer",
    "llm",
    "ai-agent",
    "local-first",
    "graph-database"
  ],
  "homepage": "https://github.com/marcussullivan/nacre",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcussullivan/nacre.git"
  },
  "license": "Apache-2.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm -ws run build",
    "typecheck": "npm -ws run typecheck",
    "test": "npx tsx --test packages/core/src/__tests__/*.test.ts",
    "test:parser": "npx tsx --test packages/parser/src/__tests__/*.test.ts",
    "test:integration": "npx tsx --test test/integration/*.test.ts",
    "test:all": "npx tsx --test packages/core/src/__tests__/*.test.ts packages/parser/src/__tests__/*.test.ts test/integration/*.test.ts",
    "lint": "npm -ws run lint"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
